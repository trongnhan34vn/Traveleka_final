@{
  ViewData["Title"] = "Dashboard Home";
  var currentUserJson = TempData["CurrentUserJson"];
  Layout = null;
}
@model Tour_Booking.Models.DashboardHomeViewModel

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Dashboard Home</title>
<link rel="icon" type="image/png" href="~/assets/const_img/logo.png" sizes="32x32">
  <!-- Custom fonts for this template-->
  <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet" />

  <!-- Custom styles for this template-->
  <link href="~/css/Dashboard/sb-admin-2.min.css" rel="stylesheet" />
  <style>
    #userDropdownItems {
      position: absolute;
      height: 0;
      background-color: white;
      overflow: hidden;
      transition-property: height;
      transition-duration: 2s;
    }

    #userDropdown {
      cursor: pointer;
    }

    #userDropdown:hover #userDropdownItems {
      height: auto;
    }
  </style>
  <script type="module" src="/js/Dashboard/Dashboard.js"></script>
</head>

<body id="page-top">
  @if (currentUserJson != null)
  {
    <h6 id="currentUserJson" hidden>@currentUserJson</h6>
  }
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
      <!-- Sidebar - Brand -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Dashboard/Home">
        <div class="sidebar-brand-icon rotate-n-15">
          <i class="fas fa-plane"></i>
        </div>
        <div class="sidebar-brand-text mx-3">Travalel</div>
      </a>

      <!-- Divider -->
      <hr class="sidebar-divider my-0" />

      <!-- Nav Item - Dashboard -->
      <li class="nav-item active">
        <a class="nav-link" href="/Dashboard/Home">
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Dashboard</span></a>
      </li>

      <!-- Divider -->
      <hr class="sidebar-divider" />

      <!-- Nav Item - User -->
      <li class="nav-item">
        <a class="nav-link" href="/Dashboard/UserMng">
          <i class="fas fa-user"></i>
          <span>User</span></a>
      </li>

      <!-- Nav Item - Tour -->
      <li class="nav-item">
        <a class="nav-link" href="/Dashboard/TourMng">
          <i class="fas fa-plane"></i>
          <span>Tour</span></a>
      </li>

      <!-- Nav Item - Tour -->
      <li class="nav-item">
        <a class="nav-link" href="/Dashboard/AddEditTour">
          <i class="fas fa-pen"></i>
          <span>Add/Edit Tour</span></a>
      </li>

      <!-- Nav Item - Booking -->
      <li class="nav-item">
        <a class="nav-link" href="/Dashboard/BookingMng">
          <i class="fas fa-clipboard-list"></i>
          <span>Booking</span></a>
      </li>

      <!-- Divider -->
      <hr class="sidebar-divider d-none d-md-block" />
    </ul>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div class="d-flex flex-column w-100" style="overflow-x: hidden;">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">
            <div class="topbar-divider d-none d-sm-block"></div>

            <!-- Nav Item - User Information -->
            <li id="userDropdown" class="nav-item no-arrow">
              <div class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span id="displayName" class="mr-2 d-none d-lg-inline text-gray-600 small"></span>
                <img class="img-profile rounded-circle"
                  src="https://i0.wp.com/sbcf.fr/wp-content/uploads/2018/03/sbcf-default-avatar.png?ssl=1" />
              </div>
              <!-- Dropdown - User Information -->
              <div id="userDropdownItems" class="shadow animated--grow-in" aria-labelledby="userDropdown">
                <p id="profileBtn" class="dropdown-item">
                  <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                  Profile
                </p>
                <div class="dropdown-divider"></div>
                <p id="signOutBtn" class="dropdown-item" data-toggle="modal" data-target="#logoutModal">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Sign Out
                </p>
              </div>
            </li>
          </ul>
        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            <div>

            </div>
          </div>
          <div class="d-flex justify-content-center align-items-center mw-25">
            <img class="mw-10 rounded-lg" style="width: 30%"
              src="https://img.freepik.com/free-photo/welcome-phrase-available-launch-open_53876-124476.jpg"
              alt="welcomeImg" />
          </div>
          <!-- Content Row -->
          <div class="row">
            <!-- User -->
            <a href="/Dashboard/UserMng" class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        User
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        @Model.UserNumber
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </a>

            <!-- Tour -->
            <a href="/Dashboard/TourMng" class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        Tour
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        @Model.TourNumber
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-plane fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </a>

            <!-- Booking -->
            <a href="/Dashboard/BookingMng" class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                        Booking
                      </div>
                      <div class="row no-gutters align-items-center">
                        <div class="col-auto">
                          <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                            @Model.BookingNumber
                          </div>
                        </div>
                        <div class="col">
                          <div class="progress progress-sm mr-2">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50"
                              aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </a>

            <!-- Earnings (Monthly) -->
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                        Earnings (Monthly)
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        @string.Format("{0:C}", Model.Earnings)
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-coins fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <script>
    let currentUserJson = document.getElementById("currentUserJson");
    if (currentUserJson) {
      console.log(currentUserJson);
      localStorage.setItem("currentUser", currentUserJson.innerHTML)
    }
  </script>
</body>

</html>
